<h1>Lista de categorias: </h1>
<a href="categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<hr>
{{#each categorias}}
<div class="card mt-4 card-group" role="group">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small style="margin: 5px 5px;">Slug: {{slug}}</small><br>
        <small style="margin: 5px 5px;">Data da criação: {{Date}}</small>
    </div>
    <div class="card-group-btn mr-2 mt-2">
       <a href="categorias/editar/{{_id}}"><button class="btn btn-outline-success"style="width: 100px;">Editar</button></a><br>
        <form action="/admin/categorias/delete" method="POST">
        <input type="hidden" name="id" value="{{_id}}"><button class="btn btn-outline-danger mt-1"style="width: 100px;">Excluir</button></form>
    </div>
</div>
{{else}}
 <h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}