{{#each erro}}
<div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}
<h3>Cadastro</h3>
<hr>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="post">
            <label for="nome">nome: </label>
                <input type="text" name="nome" class="form-control" required >
            <label for="email">Email: </label>
                <input type="email" name="email" id="" class="form-control" aria-required="true">
            <label for="senha">Senha:</label>
                <input type="password" name="senha" id="" class="form-control" required>
            <label for="senha2">Repita sua senha:</label>
                <input type="password" name="senha2" id="" class="form-control" required>
            <button type="submit" class="btn btn-success mx-auto mt-2" style="width: 200px">Criar Conta</button>
        </form>
    </div>
</div>